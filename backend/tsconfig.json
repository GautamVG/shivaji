{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"strict": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"outDir": "build",
		"lib": ["ES6", "DOM"],
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
